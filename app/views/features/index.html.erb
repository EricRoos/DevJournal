<div class='w-full'>
  <div id='features-toolbar' class='flex items-center gap-6 justify-between'>
    <%= render partial: 'layouts/breadcrumbs' %>
    <div class='w-min'>
      <div class="relative inline-block text-left" data-controller="drop-down-menu">
        <div>
          <button type="button" class="flex items-center rounded-full bg-gray-100 text-gray-400 hover:text-gray-600 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-gray-100" id="menu-button" aria-expanded="true" aria-haspopup="true" data-action="click->drop-down-menu#toggle">
            <span class="sr-only">Open options</span>
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path d="M10 3a1.5 1.5 0 110 3 1.5 1.5 0 010-3zM10 8.5a1.5 1.5 0 110 3 1.5 1.5 0 010-3zM11.5 15.5a1.5 1.5 0 10-3 0 1.5 1.5 0 003 0z" />
            </svg>
          </button>
        </div>
        <div
            data-drop-down-menu-target='linkContainer'
            class="hidden absolute right-0 z-10 mt-2 w-56 origin-top-right rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none"
            role="menu"
            aria-orientation="vertical"
            aria-labelledby="menu-button"
            tabindex="-1"
        >
          <div class="py-1" role="none">
            <!-- Active: "bg-gray-100 text-gray-900", Not Active: "text-gray-700" -->
            <%= link_to new_project_feature_path(@project), class: "text-gray-700 block px-4 py-2 text-sm",role:"menuitem",tabindex:"-1" do %>
              <div class='flex items-center gap-4'>
                <%= heroicon 'plus' %>  Add Feature
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="w-full">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <div id="features" class="min-w-full">
      <ul role="list" class="divide-y divide-gray-200">
        <%= render @features %>
      </ul>
    </div>
  </div>
</div>
