<div class='w-full'>
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div id='features-toolbar' class='flex items-center gap-6 justify-between'>
    <%= render partial: 'layouts/breadcrumbs' %>
  </div>
  <hr class='my-4'/>
  <ul>
    <%= render @feature %>
  </ul>
  <div class='grid grid-cols-1 gap-4'>
    <%= link_to 'Edit', edit_project_feature_path(@project, @feature), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium block" %>
    <%= button_to 'Destroy', project_feature_path(@project, @feature), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-red-300 font-bold text-white w-full text-left" %>
  </div>
</div>
